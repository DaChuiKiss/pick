<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorText4295D5</item>
        <item name="colorPrimaryDark">@color/colorText4295D5</item>
        <item name="colorAccent">@color/colorText4295D5</item>
    </style>



    <!-- popwindow的弹出和消失动画 -->
    <style name="pop_window_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <!-- popwindow的弹出和消失动画 下-->
    <style name="popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


</resources>
