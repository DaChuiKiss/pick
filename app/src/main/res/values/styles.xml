<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorText_4284FE</item>
        <item name="colorPrimaryDark">@color/colorText_4284FE</item>
        <item name="colorAccent">@color/colorText_4284FE</item>
    </style>



    <!-- popwindow的弹出和消失动画 -->
    <style name="pop_window_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


</resources>
