<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.MainActivity">

    <!--

    main——XML

    -->

    <LinearLayout
        android:id="@+id/bootombar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <!--    对话   -->
        <LinearLayout
            android:id="@+id/dialogue_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialogue_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/dialogue_y" />

            <TextView
                android:id="@+id/dialogue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/dialogue"
                android:textColor="@color/colorText4295D5"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <!--    通讯录   -->
        <LinearLayout
            android:id="@+id/mail_list_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mail_list_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/mail_list_n" />

            <TextView
                android:id="@+id/mail_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/mail_list"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <!--    游戏   -->
        <LinearLayout
            android:id="@+id/game_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/game_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/game_n" />

            <TextView
                android:id="@+id/game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/game"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <!--    我的   -->
        <LinearLayout
            android:id="@+id/my_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/my_n" />

            <TextView
                android:id="@+id/my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/my"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bootombar">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_above="@+id/bootombar"
        android:background="@color/colorWhite"
        android:visibility="gone" />

    <TextView
        android:id="@+id/kefu"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/kefu"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/bootombar"/>

</RelativeLayout>

