<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.RechargeRecordDetailsActivity">

    <!--  充值记录详情——XML  -->

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recharge_time"
            android:textColor="@color/colorTextMain_s"
            android:textSize="@dimen/dp_14" />

        <!--  充值时间  -->
        <TextView
            android:id="@+id/recharge_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recharge_mode"
            android:textColor="@color/colorTextMain_s"
            android:textSize="@dimen/dp_14" />

        <!--  充值方式  -->
        <TextView
            android:id="@+id/recharge_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recharge_money"
            android:textColor="@color/colorTextMain_s"
            android:textSize="@dimen/dp_14" />

        <!--  充值金额  -->
        <TextView
            android:id="@+id/recharge_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recharge_type"
            android:textColor="@color/colorTextMain_s"
            android:textSize="@dimen/dp_14" />

        <!--  充值状态  -->
        <TextView
            android:id="@+id/recharge_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/remarks"
            android:textColor="@color/colorTextMain_s"
            android:textSize="@dimen/dp_14" />

        <!--  备注  -->
        <TextView
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

</LinearLayout>
