<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.RedEnvelopeGrabActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText_f05a4b"
        android:paddingTop="@dimen/dp_20"
       >

        <RelativeLayout
            android:id="@+id/fallback"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_17"
                android:src="@drawable/fallback" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_cen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/text_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:text="..."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <!--  头像  -->
    <ImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center"/>

    <!--  名字  -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/colorText_1A1A1A"
        android:textSize="@dimen/sp_16" />

    <!--    -->
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/colorText_E9C196"
        android:textSize="@dimen/sp_18" />

    <!--    -->
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/colorText_1A1A1A"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:text="@string/prompt51"
        android:textColor="@color/colorText_666666"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
