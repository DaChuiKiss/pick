<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backpround_corners10_90while"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_422">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_80"
                android:gravity="center"
                android:orientation="horizontal">

                <!--  头像  -->
                <ImageView
                    android:id="@+id/head_img"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@drawable/dialogue_y" />

                <!--  名字  -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="dsadsada"
                    android:textColor="@color/colorText_E9C196"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/prompt38"
                android:textColor="@color/colorText_E9C196"
                android:textSize="@dimen/dp_30" />


        </LinearLayout>

        <!--   查看手气  -->
        <TextView
            android:id="@+id/chakan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:text="@string/prompt39"
            android:textColor="@color/colorText_E9C196"
            android:textSize="@dimen/dp_18" />

    </RelativeLayout>

    <TextView
        android:id="@+id/red_delete"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/red_delete"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center"/>

</LinearLayout>
