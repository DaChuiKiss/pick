<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLine_E6E6E6"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.SmallChangeActivity">

    <!--

    零钱

    -->

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/backpround_corners10_while"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/qb_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/my_small_change"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cny"
                android:textColor="@color/colorText_000000"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/small_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="0.00"
                android:textColor="@color/colorText_000000"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/colorWhite"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <!--    充值   -->
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/recharge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/recharge"
                    android:textColor="@color/colorTextMain_s"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/colorLine"/>

            <!--    提现   -->
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cash_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cash_withdrawal"
                    android:textColor="@color/colorTextMain_s"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!--  充值记录  -->
    <RelativeLayout
        android:id="@+id/recharge_record_rl"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/recharge_record"
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <!--  转账记录  -->
    <RelativeLayout
        android:id="@+id/transfer_accounts_record_rl"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/transfer_accounts_record"
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <!--  提现记录  -->
    <RelativeLayout
        android:id="@+id/cash_withdrawal_record_rl"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cash_withdrawal_record"
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <!--  红包记录  -->
    <RelativeLayout
        android:id="@+id/red_envelopes_record_rl"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/red_envelopes_record"
            android:textColor="@color/colorText_1A1A1A"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
